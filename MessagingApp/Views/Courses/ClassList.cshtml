@model MessagingApp.Models.Course
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class List - MessagingApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    
</head>
<body>
    <div class="class-list">
        <div class="d-flex align-items-center justify-content-center position-relative">
            <a href="javascript:history.back()" class="btn btn-link" style="position:absolute; left: 0">
                <i class="bi bi-arrow-left fs-3"></i>
            </a>
            <h2 class="mx-auto">@Model.Name</h2>
        </div>
        <div class="p-2 text-center">Instructor</div>
        <div class="user">@Model.CourseInstructor.Name</div>
        <div class="p-2 text-center">Students In Course</div>
        @foreach (var student in Model.Students)
        {
            <!-- Wrapping student names in an anchor tag to enable navigation to the messaging page -->
            <a asp-action="Index"
               asp-controller="Messaging"
               asp-route-studentId="@student.UserId"
               asp-route-studentName="@student.Name"
               class="text-decoration-none"
               style="text-decoration: none; color: inherit;">
                <div class="user">@student.Name</div>
            </a>
        }
    </div>
</body>
</html>
