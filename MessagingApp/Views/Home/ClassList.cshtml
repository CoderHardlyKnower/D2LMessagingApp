@model MessagingApp.Models.Course

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MessagingApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
        }

        .class-list {
            width: 90vw;
            margin: 0 auto;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 10px;
        }

        .class-list h2 {
           font-size: 24px;
           margin-bottom: 10px;
        }

       .class-list div {
            margin-bottom: 15px;
       }

        .user {
            padding: 10px;
            margin-top: 5px;
            background-color: #f0f0f0;
            border-radius: 5px;
            cursor: pointer;
        }

        .user:hover {
            background-color: #e0e0e0;
        }
        
    </style>
</head>
<body>
   <div class="class-list">
        <div class="d-flex align-items-center justify-content-center position-relative">
           <a href="javascript:history.back()" class="btn btn-link" style="position:absolute; left: 0">
               <i class="bi bi-arrow-left fs-3"></i>
           </a>
            <h2 class="mx-auto">@Model.Name</h2>
       </div>
       <div class="p-2 text-center">Instructor</div>
       <div class="user">@Model.CourseInstructor.Name</div>

       <div class="p-2 text-center">Students in this course (Student number)</div>
        @foreach (var student in Model.Students)
        {
            <div class="user">@student.Name</div>
        }
    </div>
</body>
</html>


