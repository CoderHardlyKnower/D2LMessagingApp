@{
    var userName = User?.Identity?.IsAuthenticated == true ? User.Identity.Name : "Account";
    var title = ViewData["Title"] as string ?? "";

    // Build initials (first + last)
    var initials = "U";
    if (!string.IsNullOrWhiteSpace(userName))
    {
        var parts = userName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length > 1)
        {
            initials = $"{parts[0][0]}{parts[^1][0]}".ToUpperInvariant();
        }
        else
        {
            initials = parts[0][0].ToString().ToUpperInvariant();
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>@(string.IsNullOrWhiteSpace(title) ? "" : $"{title} Â· ")LMS Messages</title>

    <!-- Core Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MessagingApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)

    <style>
        /* Mobile-first app bar */
        .app-navbar {
            --nav-h: 56px;
            min-height: var(--nav-h);
            background: #fff;
            border-bottom: 1px solid #e9ecef;
        }

        .brand-wrap {
            display: flex;
            align-items: center;
            gap: .6rem;
        }

            .brand-wrap img {
                height: 28px;
                width: auto;
            }

        .brand-name {
            font-size: .95rem;
            color: #6c757d;
            letter-spacing: .02em;
        }

        .nav-icon-btn {
            border: 0;
            background: transparent;
            padding: .35rem .55rem;
        }

        .avatar {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            background: #e9ecef;
            color: #495057;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: .85rem;
        }

        .app-container {
            padding-inline: clamp(12px, 4vw, 28px);
        }

        .page-footer {
            border-top: 1px solid #e9ecef;
            background: #fff;
        }

        button, a, .btn, .nav-link {
            -webkit-tap-highlight-color: transparent;
        }

        @@supports(padding:max(0px)) {
            .app-navbar {
                padding-top: max(env(safe-area-inset-top), 0px);
            }

            .page-footer {
                padding-bottom: max(env(safe-area-inset-bottom), 0px);
            }
        }
    </style>
</head>
<body class="bg-light">
    <header class="app-navbar navbar navbar-expand-lg sticky-top">
        <div class="container-fluid px-3">
            <!-- Brand -->
            <a class="navbar-brand m-0 p-0 brand-wrap" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/econestoga.png" alt="Logo" />
                <span class="brand-name">LMS</span>
            </a>

            <!-- Right: account dropdown -->
            <div class="ms-auto d-flex align-items-center">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <div class="dropdown">
                        <button class="nav-icon-btn d-flex align-items-center gap-2 dropdown-toggle" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="d-none d-sm-inline text-truncate" style="max-width: 160px;">@userName</span>
                            <span class="avatar" aria-hidden="true">@initials</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                            <li class="dropdown-header small text-muted">
                                Signed in as<br /><strong>@userName</strong>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Login">Sign in</a>
                }
            </div>
        </div>
    </header>

    <div class="app-container container-fluid py-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (IsSectionDefined("Footer"))
    {
        <footer class="page-footer">
            <div class="container-fluid app-container py-3 small text-muted">
                @RenderSection("Footer", required: false)
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
